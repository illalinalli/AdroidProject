<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_get_random_cat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Get random cat gif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_random_cat_gif"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="30dp"
        android:contentDescription="cat gif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_get_random_cat" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0"
        android:src="@drawable/like_anim"
        app:layout_constraintBottom_toBottomOf="@id/iv_random_cat_gif"
        app:layout_constraintEnd_toEndOf="@id/iv_random_cat_gif"
        app:layout_constraintStart_toStartOf="@id/iv_random_cat_gif"
        app:layout_constraintTop_toTopOf="@id/iv_random_cat_gif" />

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="15dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/iv_random_cat_gif"
        app:layout_constraintEnd_toEndOf="@id/iv_random_cat_gif"
        app:layout_constraintStart_toStartOf="@id/iv_random_cat_gif"
        app:layout_constraintTop_toTopOf="@id/iv_random_cat_gif" />

</androidx.constraintlayout.widget.ConstraintLayout>